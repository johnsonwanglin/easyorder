/* 面板 */
.container{
  width:100%;
  height:100vh;
  /* border: 1px solid red; */
}
.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.mainContainer {
  width: 100%;
  /* height: 100%; */
  display: flex;
}
.aside{
  /* height:100%; */
  width:80px;
  padding-bottom:0;
  text-align:center;
  overflow: scroll;
  background:#fff;
}
.aside::-webkit-scrollbar{
  width:0;
}
.aside .menu{
  height:40px;
  color:#333;
  font-size:14px;
  line-height:40px;
  border-top:1px solid #eee;
}
.aside .menu.active{
  background:#eee;
}
.item-content{
  width:calc(100% - 90px);
  /* height:100%; */
  padding: 10px 10px;
  display: flex;
  flex-direction: column;
  background:#eee;
}

.item-content .box{
  /* height:calc(100% - 10px); */
  /* padding:10px 0 0 10px; */
  /* overflow: scroll; */
}
.item-content .box.active{
  padding-bottom:80px;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:60px;
  padding:10px 30px 10px 10px;
  margin-bottom:10px;
  background:#fff;
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
}
.item-content .box .item image{
  display:block;
  height:60px;
  width:60px;
  margin-right:10px;
}
.item-content .box .item text{
  display:block;
  font-size:16px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  /* font-weight:bolder; */
}

.item-content .box .item .priceBox{
  display: flex;
  margin-top: 20px;
  justify-content: space-between;
}

.item-content .box .item .price{
  color:red;
  font-size:12px;
  margin-bottom:5px;
  width: 105px
}

.item-content .box .item .btnAdd {
   display: inline-flex;
   background: orange;
   height: 45rpx;
   width: 45rpx;
   justify-content: center;
   align-items: center;
   text-align: center;
   border-radius: 5px;
}

.item-content .box .item .btn{
  display:block;
  margin:-10px 10px 0 0;
  padding:5px 10px;
  font-size:14rpx;
  color:#fff;
  background:orange;
  border-radius:20px;
}
.item-content .box .item .btn.active{
  background:#ccc;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:60px;
    line-height:70px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}
.bottom-bar.hidden{
  display:none;
}
.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
    padding-left:10px;
}
.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    font-weight:bolder;
    color:red;
}
.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:13px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:orange;
    border-radius: 5px
}
.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
  text-align: center;
}
