/* component/popup.wxss */
.wx-popup {
  /* 脱离文档流，绝对定位 */
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}

.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  /* border-bottom: 2rpx solid red; */
}

.wx-popup-mini-title{
  margin: 10px;
}
.materialContainer {
  display: flex;
  flex-direction: row;
  margin-left: 5px
}
.material {
  width: 20px;
  height: 20px;
  border-radius: 3px;
  border: 2px solid orange;
  margin-left: 5px;
  text-align: center
}
.wx-popup-con {
  margin-left: 10px;
  margin-top: 10px;
}

.wx-popup-btn {
  margin-top: 10px;
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}
